<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Lobby.DetailActivity">

    <TextView
        android:id="@+id/tvMemeber_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Memeber_id"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="@font/dohyeon"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="40sp"
        android:textColor="@color/black"
        android:fontFamily="@font/dohyeon"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tvMemeber_id"
        app:layout_constraintLeft_toLeftOf="@id/tvMemeber_id"/>

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Content"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/dohyeon"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"/>

    <ImageView
        android:id="@+id/ivdetailSuccess"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toRightOf="@id/tvTitle"
        app:layout_constraintTop_toTopOf="@+id/tvTitle" />

    <ImageView
        android:id="@+id/ivdetailEdit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toRightOf="@id/ivdetailSuccess"
        app:layout_constraintTop_toTopOf="@+id/ivdetailSuccess" />

    <TextView
        android:id="@+id/tvCreated_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Created_at"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/dohyeon"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/ivdetailLike"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tvlikeCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textColor="@color/black"
        android:fontFamily="@font/dohyeon"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toRightOf="@id/ivdetailLike"
        app:layout_constraintBottom_toBottomOf="@id/ivdetailLike"/>

</androidx.constraintlayout.widget.ConstraintLayout>