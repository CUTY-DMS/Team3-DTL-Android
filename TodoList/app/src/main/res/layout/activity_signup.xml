<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Lobby.SignUpActivity"
    android:background="#00000016">

    <TextView
        android:id="@+id/tvDTL3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DTL"
        android:textSize="40sp"
        android:textColor="@color/black"
        android:fontFamily="@font/bmjua_ttf"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <EditText
        android:id="@+id/etRegisterName"
        android:layout_width="264dp"
        android:layout_height="32dp"
        android:hint="  이름"
        android:fontFamily="@font/bmjua_ttf"
        android:background="@drawable/etradius"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDTL3" />

    <EditText
        android:id="@+id/etRegisterAge"
        android:layout_width="264dp"
        android:layout_height="32dp"
        android:hint="  나이"
        android:inputType="number"
        android:fontFamily="@font/bmjua_ttf"
        android:background="@drawable/etradius"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/etRegisterName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/etRegisterId"
        android:layout_width="264dp"
        android:layout_height="32dp"
        android:hint="  아이디"
        android:fontFamily="@font/bmjua_ttf"
        android:background="@drawable/etradius"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/etRegisterAge"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/etRegisterPw"
        android:layout_width="264dp"
        android:layout_height="32dp"
        android:hint="  비밀번호"
        android:inputType="textPassword"
        android:fontFamily="@font/bmjua_ttf"
        android:background="@drawable/etradius"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/etRegisterId"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btRegister"
        android:layout_width="264dp"
        android:layout_height="40dp"
        android:text="회원가입"
        android:fontFamily="@font/bmjua_ttf"
        android:background="@drawable/buttonradius"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etRegisterPw"/>

</androidx.constraintlayout.widget.ConstraintLayout>