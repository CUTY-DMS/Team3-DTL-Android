<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Lobby.SignInActivity"
    android:background="@color/white">

    <TextView
        android:id="@+id/tvDTL2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DTL"
        android:textSize="40sp"
        android:textColor="@color/black"
        android:fontFamily="@font/bmjua_ttf"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <EditText
        android:id="@+id/etId"
        android:layout_width="264dp"
        android:layout_height="32dp"
        android:hint="  아이디"
        android:fontFamily="@font/bmjua_ttf"
        android:background="@drawable/etradius"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvDTL2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/etPw"
        android:layout_width="264dp"
        android:layout_height="32dp"
        android:hint="  비밀번호"
        android:fontFamily="@font/bmjua_ttf"
        android:inputType="textPassword"
        android:background="@drawable/etradius"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/etId"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btLogin"
        android:layout_width="264dp"
        android:layout_height="40dp"
        android:text="로그인"
        android:fontFamily="@font/bmjua_ttf"
        android:background="@drawable/buttonradius"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etPw"
        app:layout_constraintRight_toRightOf="parent"/>

   <TextView
       android:id="@+id/tvLogin"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="계정이 없으세요? 여기를 클릭하여 계정을 만드세요"
       android:textColor="@color/black"
       android:fontFamily="@font/bmjua_ttf"
       android:layout_marginTop="24dp"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintTop_toBottomOf="@id/btLogin"/>


</androidx.constraintlayout.widget.ConstraintLayout>